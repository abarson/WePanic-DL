#!/bin/sh

## script for runs on the cloud

pip install --upgrade src/we_panic_utils/

python src/run_model.py BN_CNN_3D_DO picky_32_32 \
--features hr \
--csv wepanic_collated_catalogue.csv \
--output_dir run_history/p_32x32_grey_hr_BN_CNN_3D_DO \
--epochs 100 \
--dimensions 32 32 \
--steps_per_epoch 500 \
--batch_size 14 \
--greyscale_on \
--kfold 4 \
--early_stopping 15 \
--loss mean_squared_error \
--sequence_length 75 
