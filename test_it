#!/bin/sh

## script for runs on the cloud

pip install --upgrade src/we_panic_utils/
epochs=10
steps_per_epoch=500
batch_size=14
calc=$epochs*$steps_per_epoch*$batch_size
steps=`echo $calc | bc`

python src/run_model.py BN_CNN_3D_DO picky_32_32 \
--features hr \
--csv wepanic_collated_catalogue.csv \
--output_dir run_history/TEST \
--epochs $epochs \
--dimensions 32 32 \
--steps_per_epoch $steps_per_epoch \
--batch_size $batch_size \
--greyscale_on \
--kfold 5 \
--loss smooth_l1_loss\
--sequence_length 60 \
--cyclic_lr triangular_lr 0.0 0.02 $steps  
