#!/bin/sh

pip install --upgrade src/we_panic_utils/
screen python src/run_model.py 3D-CNN frames \
--csv wepanic_collated_catalogue.csv \
--output_dir run_history/3DCNN_VHflip_rot10_redscale_on \
--epochs 30 \
--steps_per_epoch 500 \
--batch_size 14 \
--kfold 4 \
--vertical_flip \
--horizontal_flip \
--redscale_on \
--cyclic_lr cos_cyclic_lr \
